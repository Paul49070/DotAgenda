            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Style="{DynamicResource AdvancedBtn}" Margin="10" Content="Avancée" FontSize="12"/>
